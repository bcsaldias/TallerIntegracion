<p id="notice"><%= notice %></p>

<h1>Noticia</h1>

<p>
  <strong>Título:</strong>
  <%= @news_item.title %>
</p>

<p>
  <strong>Bajada:</strong>
  <%= @news_item.lead %>
</p>

<p>
  <strong>Cuerpo:</strong>
  <%= @news_item.body %>
</p>

<p>
  <strong>Creado:</strong>
  <%= @news_item.created_at %>
</p>

<h1>Comentarios</h1>

<table>
  <thead>
    <tr>
      <th>Autor</th>
      <th>Comentario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.author %></td>
        <td><%= comment.body %></td>
        <!--<td><%= link_to 'Mostrar', news_item_comment_path(comment.news_item.id, comment) %></td>
        <td><%= link_to 'Eliminar', news_item_comment_path(comment.news_item.id, comment) , method: :delete, data: { confirm: '¿Estás seguro que deseas eliminar este Comentario?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear comentario', new_news_item_comment_path(@news_item.id) %>

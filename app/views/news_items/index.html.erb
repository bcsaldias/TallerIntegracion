<p id="notice"><%= notice %></p>

<h1>Noticias publicadas</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Bajada</th>
      <th>Cuerpo</th>
      <th>Creado</th>
      <th>Comentarios</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_items.each do |news_item| %>
      <tr>
        <td><%= news_item.title %></td>
        <td><%= news_item.lead %></td>
        <td><%= news_item.body %></td>
        <td><%= news_item.created_at.strftime("%Y-%m-%d %H:%M:%S")  %></td>
        <td><%= news_item.comments.count %></td>
        <td><%= link_to  'Mostrar', news_item_comments_path(news_item.id)%></td>
        <td><%= link_to 'Editar', edit_news_item_path(news_item) %></td>
        <td><%= link_to 'Eliminar', news_item, method: :delete, 
                              data: { confirm: '¿Estás seguro que deseas eliminar esta noticia?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear noticia', new_news_item_path %>
